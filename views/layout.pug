doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    if title
      title=title + ' | Gisarme'
    else
      title Gisarme
    link(rel='icon', href='/favicon.ico')
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/font-awesome.css')
    link(rel='stylesheet', href='/css/flexslider.css')
    link(rel='stylesheet', href='/css/magnific-popup.css')
    link(rel='stylesheet', href='/css/animate.css')
    link(rel='stylesheet', href='/css/site.css')
    block head
  body
    div(role="navigation").navbar.navbar-inverse.navbar-fixed-top.transparent-header
      .container
        .navbar-header
          button(type="button", data-toggle="collapse", data-target=".navbar-collapse").navbar-toggle
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href="/").navbar-brand
            h5(style="color: white;")#logo.animated.zoomInLeft GISARME
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right.animated.fadeInDown
            li
              a(href="/") Home
            li
              a(href="/about") About
            li.dropdown
              a(href="#", data-toggle="dropdown").dropdown-toggle Apps 
                i.fa.fa-angle-down
              ul(role="menu", aria-labelledby="dropdownMenu").dropdown-menu.dark-dropdown.animated.fadeInDown#navMenu
                li
                  a(href="/gnoter") Gnoter
                li
                  a(href="https://www.facebook.com/triggeredbot/") TriggeredBot
            li
              a(href="/contact") Contact Us
            if !user
              li
                a(href="#", data-toggle="dropdown").dropdown-toggle
                  i.fa.fa-lock
                  |  Sign In
                .dropdown-menu.dropdown-menu-right.dropdown-login-box.animated.fadeInUp#navForm
                  form(action="/users/login", method="post", role="form")
                    h3 Log in
                    .form-group
                      .input-group
                        span.input-group-addon
                          i.fa.fa-user
                        input(type="text", name="email" placeholder="Email").form-control
                      .input-group
                        span.input-group-addon
                          i.fa.fa-lock
                        input(type="password", name="password", placeholder="Password").form-control
                      .checkbox.pull-left
                        label
                          input(type="checkbox")
                          | Remember me (it won't)
                      button(type="submit").btn.btn-theme-bg.pull-right Login
                      a(href="/users/signup").btn.border-black.pull-right Signup
            else
              li
                a(href='/users/profile') View "profile"
              li
                a(href="/users/logout") Log out
  .intro
    block intro
  block content
  footer#footer
    .container
      .row
        .col-md-12.margin30
          .footer-col
