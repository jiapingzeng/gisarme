extends layout

block intro
  .container
    h1 Question? Concern? Suggestion?
    h3 Feel free to contact us anytime.
    .text-center
      a(href="#contactForm") jump to form
block content
  .divide60
  section
    .row
      .col-md-10.col-sm-offset-1.margin30.contact-sky-option
        .row
          .col-md-12
            .center-heading
              h2 Contact us
              span.center-line
              p why not?
        .row
          .col-md-4.col-md-offset-2.margin30
            .contact-option-circle
              i.fa.fa-envelope-o
              h5 Jiaping Zeng
              p Did something on this site stop working? Or have a suggestion? Try this guy.
              a(href="mailto:jiaping@gisar.me") jiaping@gisar.me
          .col-md-4.margin30
            .contact-option-circle
              i.fa.fa-envelope
              h5 Luke Cheng
              p Question about the Gisarme youtube channel? Spam him.
              a(href="mailto:luke@gisar.me") luke@gisar.me
        form(action="/contact", method="post").sky-form.sky-form-columns#contactForm
          fieldset
            section
             h4 Have something else in mind?
             p Fill this out and we will get back to you ASAP. (JK broken form don't use this)
            .row
              section.col.col-6
                label.label Name
                label.input
                  i.icon-append.fa.fa-user
                  input(type="text", name="name")#name
              section.col.col-6
                label.label Email
                label.input
                  i.icon-append.fa.fa-envelope-o
                  input(type="email", name="email")#email
            section
              label.label Message
              label.textarea
                i.icon-append.fa.fa-comment
                textarea(rows=5, name="message")#message
            section
              button(type="submit", disabled).btn.btn-theme-bg.btn-lg Send message
