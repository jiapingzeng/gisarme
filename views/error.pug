extends layout

block intro
  .text-center
    h1(style="color: white; line-height: 80vh; font-size: 4vw;") Oh shit. Something went wrong.
    h4(style="color: white; line-height: 20vh; font-size: 1.5vw;") (you dun goofed)
block content
  section.intro-text
    .container
      .row
        .col-md-12.col-sm-12.text-center
          h2= message
          h3= error.status
          if error.stack
            pre #{error.stack}
          else
            p.lead :'(
