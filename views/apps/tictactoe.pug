doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title=title
    link(rel='icon', href='/img/note.png')
    link(rel='stylesheet', href='/css/materialize.css')
    link(rel='stylesheet', href='/css/tictactoe.css')
  body
    header
      nav.light-green
        .nav-wrapper
          a.brand-logo.center tic tac toe
      br
      br
      br
    main
      .announcement
          h4 Who needs a working game when you can have a working chat?
          //h3#message=currentPlayer + '\'s turn'
          img(src='/img/spinner.png', width='50px').rotating
      //table.board.col.s6.offset-s3
        tr
          td.cell#1
          td.cell#2
          td.cell#3
        tr
          td.cell#4
          td.cell#5
          td.cell#6
        tr
          td.cell#7
          td.cell#8
          td.cell#9
      //.controls
        button.btn-large.light-green#reset new game
      .chatbox
        h5 
        ul.collection.chat#activities
        input(type='text', placeholder='set your username')#input  
      //ul.pages
        li.login.page
          .form
            h3.title Enter a name
            input(maxlength=14).username
        li.chat.page
          .chat
            ul.messages
          input(placeholder='qwerty')#chatmessage        
    script(src='/js/jquery.js')
    script(src='/js/materialize.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/tictactoe.js')