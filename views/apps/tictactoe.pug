doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title=title
    link(rel='icon', href='/img/note.png')
    link(rel='stylesheet', href='/css/materialize.css')
    link(rel='stylesheet', href='/css/tictactoe.css')
  body
    header
      nav.light-green
        .nav-wrapper
          a.brand-logo.center A N G E R Y tic tac toe
      br
      br
      br
    main
      img(src='/img/spinner.png', width='100px').rotating
      .announcement
          h3#message=currentPlayer + '\'s turn'
      table.board.col.s6.offset-s3
        tr
          td.cell#1
          td.cell#2
          td.cell#3
        tr
          td.cell#4
          td.cell#5
          td.cell#6
        tr
          td.cell#7
          td.cell#8
          td.cell#9
      .controls
        button.btn-large.light-green#reset new game
    script(src='/js/jquery.js')
    script(src='/js/materialize.js')
    script(src='/js/tictactoe.js')