doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title=title
    link(rel='icon', href='/favicon.ico')
    link(rel='stylesheet', href='/css/materialize.css')
    link(rel='stylesheet', href='/css/font-awesome.css')
    link(rel='stylesheet', href='/css/sudoku.css')
  body
    header
      nav.light-green
        .nav-wrapper
          a.brand-logo.center (not) tic tac toe
      br
      br
      br
    main
      .announcement
          h4 Sudoku live coming soon&trade;
          //h3#message=currentPlayer + '\'s turn'
          img(src='/img/spinner.png', width='50px').rotating
      .lobby
        .chatbox
          ul.collection.chat#activities
          input(type='text', placeholder='set your username')#input
      - for (var i = 0; i < 5; ++i) {
        br
      - }
      .game
        .row
          .col.m3.left-align
            button.btn-large#createGame create game
          .input-field.col.m7
            input(type='text', placeholder='create game to generate link', readonly)#gameLink
          .col.m2.right-align
            button.btn-floating.btn-large.disabled#copyLink
              i.fa.fa-files-o
        .row
          .col.m9
            input(type='text', placeholder='enter game ID')#gameId
          .col.m3.right-align
            button.btn-large#joinGame join game
        .row.valign-wrapper.hide#gameBanner
          h4.col.s5.playerName#player1
          h2.col.s2 VS
          h4.col.s5.playerName#player2 waiting for opponent...
    script(src='/js/jquery.js')
    script(src='/js/materialize.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/sudoku.js')